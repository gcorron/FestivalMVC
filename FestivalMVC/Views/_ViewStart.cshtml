@{

    Layout = "~/Views/Shared/_Layout.cshtml";

    if (!(Session["TheUser"] is null))
    {
        FestivalMVC.Models.LoginPerson theUser = (FestivalMVC.Models.LoginPerson)Session["TheUser"];
        if (theUser.RoleType == 'E')
        {
            Layout = "~/Views/Chair/_ChairLayout.cshtml";
        }
    }
}