@using FestivalMVC.Models
@{

    Layout = "~/Views/Shared/_Layout.cshtml";

    if (!(Session["TheUser"] is null))
    {
        var theUser = (LoginPerson)Session["TheUser"];
        switch (theUser.RoleType)
        {
            case PersonHelper.Chair:
                Layout = "~/Views/Chair/_ChairLayout.cshtml";
                break;
            case PersonHelper.Admin:
            case PersonHelper.Coordinator:
            case PersonHelper.Director:
            case PersonHelper.Manager:
                Layout = "~/Views/Admin/_AdminLayout.cshtml";
                break;
            case PersonHelper.Teacher:
                Layout = "~/Views/Teacher/_TeacherLayout.cshtml";
                break;

        }
    }
}