@using FestivalMVC.Models
@model FestivalMVC.ViewModels.SchedulePageViewModel

@{
    Layout = "~/Views/Chair/_ChairLayout.cshtml";
}


<form id="__AjaxAntiForgeryForm">
    @Html.AntiForgeryToken()
</form>

<div class="row">
    <div class="col-sm-4">
        <div class="well well-sm">
            <h4>Unscheduled Entry Summary</h4>
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Class</th>
                        <th class="text-right">Minutes</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var summaryLine in Model.Summary)
                        {
                            <tr>
                                <td>@TotalBold(summaryLine.ClassTypeDesc)</td>
                                <td class="text-right">@TotalBold(summaryLine.AuditionMinutes)</td>
                                <td class="text-right">@summaryLine.TotalMinutes</td>
                            </tr>

                        }
                        IHtmlString TotalBold(string desc)
                        {
                            if (desc == "Total") {
                                return Html.Raw("<b>Total</b>");
                            }
                            else
                            {
                                return Html.Raw(desc);
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="well well-sm">
            <h4>Judges Schedule</h4><input class="btn btn-sm btn-primary" onclick="ScheduleApp.addSchedule()"/>
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Judge</th>
                        <th>Start Time</th>
                        <th>Minutes</th>
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var scheduleLine in Model.Schedule)
                        {
                            <tr>
                                <td>@scheduleLine.Judge</td>
                                <td>@Model.EventTime(scheduleLine.StartTime)</td>
                                <td>@scheduleLine.Minutes</td>
                            </tr>

                        }
                    }
                </tbody>
            </table>


        </div>

    </div>
</div>
